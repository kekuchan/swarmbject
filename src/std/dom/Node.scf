	}

	void setOnPaste(void(std::dom::Event*,
		std::ApplicationInstance) callback){
		if (isNull()) {return;}
		void* nodeObject = jsObject.getJsObject();
		void* jsCallback = getJsCallback(callback);
		constwrite "	nodeObject.onpaste = jsCallback;\n";
	}
	
	bool isNull(){
		return jsObject.isNull();
	}
	
	static bool isNullStatic(
		std::dom::Node* node){
		return node == nullptr ||
			node->jsObject.isNull();
	}

	void set(std::dom::Node* node){
		std::js::Object* src;
		if (node != nullptr){
			src = &node->jsObject;
		} else {
			src = nullptr;
		}
		jsObject.copyFromObject(src);
	}
	
	bool isSameNode(std::dom::Node* node){
		std::js::Object* src;
		if (node != nullptr){
			src = &node->jsObject;
		} else {
			src = nullptr;
		}
		return jsObject.equals(src);
	}
	
}