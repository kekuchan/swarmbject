class PtrDArray {
	unsigned int capacity;
	void*[] data;
	unsigned int size;

	PtrDArray(){
		size = 0;
		capacity = 0;
		data = nullptr;
	}
	
	~PtrDArray(){
		delete[] data;
	}

	void*[] addSize(unsigned int len, bool copy, bool del){
		unsigned int previousSize = size;
		unsigned int newSize = previousSize + len;
		unsigned int newCapacity = capacity;
		void*[] newData;
		if (newCapacity < newSize){
			if (newCapacity == 0){
				newCapacity = len;
				newData = new void*[len];
			} else {
				newCapacity = newCapacity * 2;
				if (newCapacity < newSize) {newCapacity = newSize;}
				void*[] previousData = data;
				newData = new void*[newCapacity];
				if (copy){
					std::arr::Ptr::copy(newData, 0,
						previousData, 0, previousSize);
				}
				if (del) {delete[] previousData;}
			}
			data = newData;
			capacity = newCapacity;
		} else {newData = data;}
		size = newSize;
		return newData;
	}
	
	void*[] insertSize(unsigned int len,
		unsigned int start){
		unsigned int previousSize = size;
		if (start > previousSize) {return nullptr;}
		void*[] previousData = data;
		void*[] newData = addSize(len, false, false);
		std::arr::Ptr::copy(newData, start + len,
			previousData, start, previousSize - start);
		if (newData != previousData){
			std::arr::Ptr::copy(newData, 0,
				previousData, 0, start);
			delete[] previousData;
		}
		return newData;
	}

	/* Public member functions. */

	void addRange(void*[] array,
		unsigned int start, unsigned int len){
		if (len == 0) {return;}
		void*[] previousData = data;
		unsigned int previousSize = size;
		void*[] newData = addSize(len, true, false);
		std::arr::Ptr::copy(newData, previousSize,
			array, start, len);
		if (newData != previousData){
			delete[] previousData;
		}
	}
	
	void clear(){
		size = 0;
	}

	unsigned char compare(void*[] dst, 
		unsigned int i, unsigned int dstLen,
		unsigned char(void*,void*) compare){
		return std::arr::Ptr::compareRange(
			data, 0, size,
			dst, i, dstLen, compare);
	}

	void copyRange(unsigned int start, void*[] src, 
		unsigned int i, unsigned int len){
		unsigned int dataLen = size;
		if (start >= dataLen) {return;}
		if (start + len > dataLen){
			len = dataLen - start;
		}
		std::arr::Void::copy(data, start,
			src, i, len);
	}
	
	void erase(unsigned int start, unsigned int len){
		unsigned int newSize = size;
		if (start < newSize){
			unsigned char[] newData = data;
			if (start + len < newSize){
				newSize = newSize - len;
				std::arr::Ptr::copy(newData, start,
					newData, start + len, newSize - start);
				size = newSize;
			} else {
				size = start;
			}
		}
	}

	unsigned int find(void* element,
		unsigned char(void*,void*) compareElements,
		unsigned int start){
		unsigned int len = size;
		if (start >= len) {return 0;}
		return std::arr::Ptr::find(
			data, start, 
			len - start, element, compareElements);
	}

	unsigned int findLast(void* element,
		unsigned char(void*,void*) compareElements,
		unsigned int start){
		unsigned int len = size;
		if (start > len) {start = len;}
		return std::arr::Ptr::findLast(
			data, 0, start, element, compareElements);
	}

	unsigned int findLastRange(void*[] src, 
		unsigned int i, unsigned int len, 
		unsigned char(void*,void*) compareElements,
		unsigned int start){
		unsigned int max = size;
		if (start > max) {start = max;}
		return std::arr::Ptr::findLastRange(data, 0, start,
			src, i, len, compareElements);
	}
	
	unsigned int findRange(void*[] src, 
		unsigned int i, unsigned int len, 
		unsigned char(void*,void*) compareElements,
		unsigned int start){
		unsigned int max = size;
		if (start >= max) {return 0;}
		return std::arr::Ptr::findRange(data, start, max - start,
			src, i, len, compareElements);
	}
	
	unsigned int findSorted(void* element,
		unsigned char(void*,void*) compareElements){
		return std::arr::Ptr::findSorted(
			data, 0, size, element, compareElements);
	}

	void* getBack(){
		unsigned int previousSize = size;
		if (previousSize > 0){
			return data[previousSize - 1];
		} else {
			return nullptr;
		}
	}
	
	void insert(unsigned int start,
		void* element, unsigned int len){
		void*[] newData = insertSize(len, start);
		if (newData != nullptr){
			len = start + len;
			while (start < len){
				newData[start] = element;
				start = start + 1;
			}
		}
	}

	void insertRange(
		unsigned int start, void*[] src, 
		unsigned int i, unsigned int len){
		void*[] newData = insertSize(len, start);
		if (newData != nullptr){
			std::arr::Ptr::copy(newData, start,
				src, i, len);
		}
	}

	void insertSorted(void* element,
		unsigned char(void*,void*) compare){
		unsigned int end = size;
		if (end > 0){
			/* Trick using offset by 1 to keep variables as unsigned. */
			unsigned int start = 1;
			unsigned int mid;
			void*[] arrayData = data;
			while (true){
				mid = (end + start) >> 1;
				switch (compare(arrayData[mid - 1], element)){
					case std::Compare::less:
						if (start == end){
							end = mid;
							break;
						}
						start = mid + 1;
						continue;
					case std::Compare::equal:
						end = mid - 1;
						break;
					case std::Compare::greater:
						end = mid - 1;
						if (start > end) {break;}
						continue;
				}
				break;
			}
		}
		insert(end, element, 1);
	}

	void move(std::ds::PtrDArray* src){
		if (src == this) {return;}
		size = src->size;
		capacity = src->capacity;
		delete[] data;
		data = src->data;
		src->size = 0;
		src->capacity = 0;
		src->data = nullptr;
	}

	void* pop(){
		unsigned int previousSize = size;
		if (previousSize > 0){
			size = previousSize - 1;
			return data[previousSize - 1];
		} else {
			return nullptr;
		}
	}

	void push(void* element){
		void*[] newData = addSize(1, true, true);
		newData[size - 1] = element;
	}

	void reserve(unsigned int newCapacity){
		if (newCapacity > capacity){
			void*[] previousData = data;
			void*[] newData = new void*[newCapacity];
			if (previousData != nullptr){
				std::arr::Ptr::copy(newData, 0,
					previousData, 0, size);
				delete[] previousData;
			}
			data = newData;
		}
		capacity = newCapacity;
	}
	
	void reverse(){
		std::arr::Ptr::reverse(
			data, 0, size);
	}
	
	/* Should work even if the regions overlap, as then 
		its length can not be greater than its container. */
	void setRange(void*[] src, 
		unsigned int start, unsigned int len){
		unsigned char[] newData;
		unsigned int previousSize = size;
		if (len > previousSize){
			newData = addSize(
				len - previousSize, false, true);
		} else {
			newData = data;
			length = len;
		}
		std::arr::Ptr::copy(newData, 0, src, start, len);
	}

	void shift(
		unsigned int start, unsigned int len){
		insertSize(len, start);
	}
	
	void trim(unsigned int len){
		if (len < size){
			size = len;
		}
	}

}